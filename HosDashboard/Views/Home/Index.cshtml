<script>
function createChart() {
    var data = {
        labels: ["Doctors", "Nurses", "Patients", "Employees"],
        datasets: [{
            data: [@Model.doctors_count, @Model.nurses_count, @Model.patients_count, @Model.employee_count],
            backgroundColor: [
                "#FF6384",
                "#36A2EB",
                "#FFCE56",
                "#4BC0C0"
            ]
        }]
    };

    var options = {
        responsive: true
    };

    var ctx = document.getElementById("myChart2").getContext("2d");
    var myChart = new Chart(ctx, {
        type: 'pie',
        data: data,
        options: options
    });
}
</script>
